      <Events>
         <Event>
            <Name>On Preload</Name>
            <Args/>
            <Script>-- 这些操作在屏幕显示之前执行。

-- 计算安装所需空间
_SpaceRequired = SetupData.CalculateRequiredSpace();

-- 以一个适当的度量单位来将其格式化为一个字符串 (如："0 字节")
local strSpaceRequired = String.GetFormattedSize(_SpaceRequired);

-- 将字符串储存在一个会话变量中，以便它可以用在屏幕文本中
SessionVar.Set("%SpaceRequired%", strSpaceRequired);

-- 来自 _SUF70_Global_Functions.lua:
-- 更新“总共需要空间:”信息 (扩展其中的任意会话变量)
g_UpdateStaticTextCtrl(CTRL_STATICTEXT_SPACEREQUIRED, "IDS_CTRL_STATICTEXT_SPACEREQUIRED");
</Script>
         </Event>
         <Event>
            <Name>On Back</Name>
            <Args/>
            <Script>-- 这些操作在点击“返回”按钮时执行。

-- 返回到上一个屏幕
Screen.Back();
</Script>
         </Event>
         <Event>
            <Name>On Next</Name>
            <Args/>
            <Script>-- 这些操作在点击“下一步”按钮时执行。
-- 提示：你可以在这里添加验证用户输入信息的操作

-- 进入下一个屏幕
Screen.Next();
</Script>
         </Event>
         <Event>
            <Name>On Cancel</Name>
            <Args/>
            <Script>-- 这些操作在点击“取消”按钮时执行。

-- 来自 _SUF70_Global_Functions.lua:
-- 询问用户是否确定要退出
if g_ConfirmSetupAbort() then
	Application.Exit();
end
</Script>
         </Event>
         <Event>
            <Name>On Help</Name>
            <Args/>
            <Script>-- 这些操作在点击“帮助”按钮时执行。
</Script>
         </Event>
         <Event>
            <Name>On Ctrl Message</Name>
            <Args>number e_CtrlID, number e_MsgID, table e_Details</Args>
            <Script>-- 这些操作由屏幕上的控件触发。

if(e_CtrlID == CTRL_SELECT_PACKAGE_TREE) then
	-- 控制信息来自选择程序包树...

	-- 如果当前所选项更改 (即选择了不同的程序包)
	-- 更新描述栏
	if(e_MsgID == MSGID_ONSELCHANGED) then

		-- 获取所选项的描述
		local strText = e_Details.Description;
		
		-- 如果所选项是一个程序包，则将其大小添加到描述中
		if(e_Details.Type == 1) then
			strText = strText.."\n( "..String.GetFormattedSize(e_Details.Size).." )";
		end
		
		-- 更新描述栏
		DlgStaticText.SetProperties(CTRL_STATICTEXT_BODY, {Text=strText});
	end


	-- 如果某个项目的状态更改 (即程序包选中或不选)
	-- 更新“总共需要空间:”信息
	if(e_MsgID == MSGID_ONSTATECHANGED) then

		-- 计算安装所需空间
		_SpaceRequired = SetupData.CalculateRequiredSpace();
		
		-- 以一个适当的度量单位将 %SpaceRequired% 设置到一个字符串中 (如："0 字节")
		SessionVar.Set("%SpaceRequired%", String.GetFormattedSize(_SpaceRequired) );

		-- 来自 _SUF70_Global_Functions.lua:
		-- 更新“总共需要空间:”信息 (扩展其中的任意会话变量)
		g_UpdateStaticTextCtrl(CTRL_STATICTEXT_SPACEREQUIRED, "IDS_CTRL_STATICTEXT_SPACEREQUIRED");
	end
end
</Script>
