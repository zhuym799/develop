      <Events>
         <Event>
            <Name>On Preload</Name>
            <Args/>
            <Script>-- 这些操作在屏幕显示之前执行。
</Script>
         </Event>
         <Event>
            <Name>On Back</Name>
            <Args/>
            <Script>-- 这些操作在点击“返回”按钮时执行。

-- 返回到上一个屏幕
Screen.Back();
</Script>
         </Event>
         <Event>
            <Name>On Next</Name>
            <Args/>
            <Script>-- 这些操作在点击“下一步”按钮时执行。
-- 提示：你可以在这里添加验证用户输入信息的操作

local bHasItems = DlgListBox.GetCount(CTRL_LIST_BOX) &gt; 0;
local nSelectedCount = DlgListBox.GetSelectedCount(CTRL_LIST_BOX);

-- 如果列表为空且没有选择项目，则显示警告
-- 否则进入下一个屏幕
if( bHasItems and (nSelectedCount &lt; 1)) then
	local strTitle = SetupData.GetLocalizedString("MSG_NOTICE");
	local strPrompt = SetupData.GetLocalizedString("MSG_LIST_BOX_SELECT_AN_ITEM");
	Dialog.Message(strTitle, strPrompt, MB_OK, MB_ICONEXCLAMATION);
else
	-- 进入下一个屏幕
	Screen.Next();
end
</Script>
         </Event>
         <Event>
            <Name>On Cancel</Name>
            <Args/>
            <Script>-- 这些操作在点击“取消”按钮时执行。

-- 来自 _SUF70_Global_Functions.lua:
-- 询问用户是否确定要退出
if g_ConfirmSetupAbort() then
	Application.Exit();
end
</Script>
         </Event>
