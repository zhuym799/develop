<ActionTemplates>
   <Action>
      <Name>Application.Exit</Name>
      <Description>退出安装程序，并返回一个可选的返回代码。</Description>
      <ReturnValueType/>
     <Arguments>
         <Arg>
            <Name>ReturnCode</Name>
            <Description>为 setup.exe 的进程设置可选的返回代码。</Description>
            <Type>number</Type>
            <Default>0</Default>
            <Required>1</Required>
            <EasyMode>
               <Default>0</Default>
               <DataType>number</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Application.GetInstallLanguage</Name>
      <Description>返回一个包含当前安装语言的表格。</Description>
      <ReturnValueType>table</ReturnValueType>
   </Action>
<Action>
      <Name>Application.GetLastError</Name>
      <Description>返回最后的错误代码。</Description>
      <ReturnValueType>number</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>Application.GetWndHandle</Name>
      <Description>为安装程序窗口返回数字窗口句柄。</Description>
      <ReturnValueType>number</ReturnValueType>
   </Action>
   <Action>
      <Name>Application.LoadActionPlugin</Name>
      <Description>加载一个操作插件文件 (.lmd)。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Filename</Name>
            <Description>操作插件文件 (.lmd) 的路径。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>_TempLaunchFolder.."\\Plugins\\MyModule.lmd"</Default>
               <DataType>fileedit</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Application.LoadScript</Name>
      <Description>加载并执行一个外部脚本文件 (.lua)。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Filename</Name>
            <Description>外部脚本文件 (.lua) 的路径。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>_TempLaunchFolder.."\\MyScript.lua"</Default>
               <DataType>fileedit</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Application.LoadValue</Name>
      <Description>加载保存 Application.SaveValue 操作的值。</Description>
      <ReturnValueType>string</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>Section</Name>
            <Description>值已经保存的区段的名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"Your_Application_Name"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Key</Name>
            <Description>识别值的键的名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"Your_Key"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Application.Minimize</Name>
      <Description>最小化安装程序窗口到任务栏。</Description>
      <ReturnValueType/>
   </Action>
   <Action>
      <Name>Application.Restore</Name>
      <Description>恢复安装程序窗口。</Description>
      <ReturnValueType/>
   </Action>
   <Action>
      <Name>Application.RunScriptFile</Name>
      <Description>执行外部脚本文件 (.lua) 的内容。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Filename</Name>
            <Description>外部脚本文件 (.lua) 的路径。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>_TempLaunchFolder.."\\MyScript.lua"</Default>
               <DataType>fileedit</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Application.SaveValue</Name>
      <Description>保存值到用户的系统，以便今后可用 Application.LoadValue 操作获取。
      </Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Section</Name>
            <Description>值将被保存的区段的名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"Your_Application_Name"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Key</Name>
            <Description>将识别值的键的名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"Your_Key"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Value</Name>
            <Description>要保存的值。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"Your_Value"</Default>
               <DataType>string</DataType>
               <Constraints>0,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
      <Action>
      <Name>Application.SetInstallLanguage</Name>
      <Description>设置指定的语言为安装语言。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Primary</Name>
            <Description>为安装设置的主语言 ID (十进制)。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>9</Default>
               <DataType>number</DataType>
               <Constraints>*,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Secondary</Name>
            <Description>为安装设置的次语言 ID (十进制)。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>1</Default>
               <DataType>number</DataType>
               <Constraints>*,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Application.SetLastError</Name>
      <Description>更改最后的错误代码。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>ErrorCode</Name>
            <Description>指示要设置的错误代码的数字代码。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>1153</Default>
               <DataType>number</DataType>
               <Constraints>*,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Application.Sleep</Name>
      <Description>让安装程序休眠一段时间。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Time</Name>
            <Description>要休眠的时间 (毫秒)。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>1000</Default>
               <DataType>number</DataType>
               <Constraints>0,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
</ActionTemplates>
