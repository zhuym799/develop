   <Action>
      <Name>System.RegisterFont</Name>
      <Description>注册 TrueType 字体 (.ttf 文件)。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Filename</Name>
            <Description>字体文件的完整路径。文件必须是有效的 Windows .TTF 文件。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>Shell.GetFolder(SHF_FONTS).."\\My Font.ttf"</Default>
               <DataType>fileedit</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Fontname</Name>
            <Description>TrueType 字体在注册表中显示的名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>0</Required>
            <EasyMode>
               <Default>"MyFontName"</Default>
               <DataType>string</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Permanent</Name>
            <Description>是否永久注册字体文件。</Description>
            <Type>boolean</Type>
            <Default>true</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>true</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
