<ActionTemplates>
   <Action>
      <Name>Debug.Clear</Name>
      <Description>清除调试窗口的内容。</Description>
      <ReturnValueType/>
      <Arguments/>
   </Action>
   <Action>
      <Name>Debug.GetEventContext</Name>
      <Description>返回描述当前事件上下文的字符串，如："欢迎 > 继续时"。</Description>
      <ReturnValueType>string</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>Debug.GetTraceMode</Name>
      <Description>返回当前调试跟踪模式。</Description>
      <ReturnValueType>boolean</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>Debug.Print</Name>
      <Description>追加文本到调试窗口的底部。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Text</Name>
            <Description>要添加到调试窗口的文本。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"调试信息"</Default>
               <DataType>multiline</DataType>
               <Constraints>0,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Debug.SetTraceMode</Name>
      <Description>打开或关闭调试跟踪模式。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Enable</Name>
            <Description>是否打开或关闭跟踪模式。</Description>
            <Type>boolean</Type>
            <Default>true</Default>
            <Required>1</Required>
            <EasyMode>
               <Default>true</Default>
               <DataType>boolean</DataType>
               <Constraints/>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Debug.ShowWindow</Name>
      <Description>显示或隐藏调试窗口。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Show</Name>
            <Description>是否显示或隐藏调试窗口。</Description>
            <Type>boolean</Type>
            <Default>true</Default>
            <Required>1</Required>
            <EasyMode>
               <Default>true</Default>
               <DataType>boolean</DataType>
               <Constraints/>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
</ActionTemplates>
