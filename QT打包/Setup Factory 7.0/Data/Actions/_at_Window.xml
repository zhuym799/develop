   <Action>
      <Name>Window.SetOrder</Name>
      <Description>设置相对于其他可见窗口的窗口 Z 顺序。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>WndHandle</Name>
            <Description>代表指定窗口的整数值 (通常归为 hWnd)。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>Application.GetWndHandle()</Default>
               <DataType>number</DataType>
               <Constraints>0,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>InsertAfter</Name>
            <Description>先于 WndHandle 指定窗口的窗口句柄。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>HWND_TOP</Default>
               <DataType>combo</DataType>
               <Constraints>HWND_BOTTOM, HWND_NOTOPMOST, HWND_TOP, HWND_TOPMOST</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Window.SetPos</Name>
      <Description>设置指定窗口相对于屏幕的 X 和 Y 像素坐标。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>WndHandle</Name>
            <Description>代表指定窗口的整数值 (通常归为 hWnd)。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>Application.GetWndHandle()</Default>
               <DataType>number</DataType>
               <Constraints>0,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>X</Name>
            <Description>新的 X 像素坐标 (水平位置)。这是窗口相对于屏幕左上角的 X 坐标。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>0</Default>
               <DataType>number</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Y</Name>
            <Description>新的 Y 像素坐标 (垂直位置)。这是窗口相对于屏幕左上角的 Y 坐标。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>0</Default>
               <DataType>number</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
