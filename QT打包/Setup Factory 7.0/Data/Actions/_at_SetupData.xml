<ActionTemplates>
   <Action>
      <Name>SetupData.CalculateRequiredSpace</Name>
      <Description>计算安装所需的磁盘空间。</Description>
      <ReturnValueType>number</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>CallbackFunction</Name>
            <Description>在不需要默认进度操作时要调用的函数。</Description>
            <Type>function</Type>
            <Default>nil</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>nil</Default>
               <DataType>function</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>SetupData.GetAppShortcutFolderPath</Name>
      <Description>获取存放应用程序快捷方式的文件夹。</Description>
      <ReturnValueType>string</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>SetupData.GetFileList</Name>
      <Description>返回包含有关每个安装文件信息的数字索引表。</Description>
      <ReturnValueType>table</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>SetupData.GetLocalizedString</Name>
      <Description>获取全局字符串的定位文本 (基于当前安装语言)。</Description>
      <ReturnValueType>string</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>StringID</Name>
            <Description>要获取定位文本的字符串 ID。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"Screen_String_ID"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>SetupData.GetPackageList</Name>
      <Description>返回包含在当前安装程序中的程序包 ID 的数字索引表。</Description>
      <ReturnValueType>table</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>SetupData.GetPackageProperties</Name>
      <Description>返回包含给定的程序包属性的表。</Description>
      <ReturnValueType>table</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>PackageName</Name>
            <Description>要获取属性的程序包名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"我的程序包"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>SetupData.GetSerialListNames</Name>
      <Description>返回包含所有序列号列表名称的数字索引表。</Description>
      <ReturnValueType>table</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>SetupData.IsValidSerialNumber</Name>
      <Description>检查给定的序列号在指定的序列号列表中是否有效。</Description>
      <ReturnValueType>boolean</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>ListName</Name>
            <Description>要验证序列号的序列号列表名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"列表 1"</Default>
               <DataType>SerialList</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>SerialNumber</Name>
            <Description>要验证的序列号。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"My_Serial_Number"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>SetupData.SetLocalizedString</Name>
      <Description>设置当前语言中字符串 ID 的文本。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>StringID</Name>
            <Description>要设置文本的字符串 ID。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"My_String_ID"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Text</Name>
            <Description>要设置给字符串 ID 的文本。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"修改的文本"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>SetupData.SetPackageProperties</Name>
      <Description>设置给定的程序包的属性。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>PackageName</Name>
            <Description>要设置属性的程序包名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"我的程序包"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Properties</Name>
            <Description>包含要设置属性的表，由 "DisplayName"、"Description"、"Install" 和 "Enabled" 索引。</Description>
            <Type>table</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>{Install=true}</Default>
               <DataType>table</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>SetupData.WriteToLogFile</Name>
      <Description>将文本的字符串写入安装或卸载日志文件。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Text</Name>
            <Description>要输出到日志文件中的文本。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"日志项目文本\r\n"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>AddTimestamp</Name>
            <Description>是否预先将时间戳传入文本。</Description>
            <Type>boolean</Type>
            <Default>true</Default>
            <Required>1</Required>
            <EasyMode>
               <Default>true</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
</ActionTemplates>
