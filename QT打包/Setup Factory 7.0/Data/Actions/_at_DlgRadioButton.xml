<ActionTemplates>
   <Action>
      <Name>DlgRadioButton.GetProperties</Name>
      <Description>获取当前屏幕上单选按钮控件的属性。</Description>
      <ReturnValueType>table</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>ControlID</Name>
            <Description>单选按钮控件的数字 ID。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default/>
               <DataType>RadioButton</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
      <Action>
      <Name>DlgRadioButton.SetProperties</Name>
      <Description>设置当前屏幕上单选按钮控件的属性。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>ControlID</Name>
            <Description>单选按钮控件的数字 ID。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default/>
               <DataType>RadioButton</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Properties</Name>
            <Description>包含单选按钮控件属性的表格，由 "Checked", "Enabled", "Text" 和 "Visible" 索引。</Description>
            <Type>table</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>my_table</Default>
               <DataType>table</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
</ActionTemplates>
