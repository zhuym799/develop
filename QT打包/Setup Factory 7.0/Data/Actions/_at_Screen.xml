<ActionTemplates>
   <Action>
      <Name>Screen.Back</Name>
      <Description>返回到一个已查看过的屏幕。此操作类似网络浏览器上的返回按钮。</Description>
      <ReturnValueType/>
      <Arguments/>
   </Action>
   <Action>
      <Name>Screen.End</Name>
      <Description>跳转到当前屏幕列表的末尾，并开始安装中的下一个阶段。</Description>
      <ReturnValueType/>
      <Arguments/>
   </Action>
   <Action>
      <Name>Screen.GetFocus</Name>
      <Description>获取当前控件的 ID。</Description>
      <ReturnValueType>number</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>Screen.GetLocalizedString</Name>
      <Description>获取当前语言中字符串 ID 的文本。</Description>
      <ReturnValueType>string</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>StringID</Name>
            <Description>要获取文本的屏幕字符串 ID。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"My_String_ID"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Screen.GetProperties</Name>
      <Description>获取当前屏幕的属性。</Description>
      <ReturnValueType>table</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>Screen.Jump</Name>
      <Description>跳转到指定屏幕。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>ScreenName</Name>
            <Description>要跳转到的屏幕名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"我的目标屏幕"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Screen.Next</Name>
      <Description>依照屏幕管理器中的顺序进入屏幕列表中的下一个屏幕。</Description>
      <ReturnValueType/>
      <Arguments/>
   </Action>
   <Action>
      <Name>Screen.Previous</Name>
      <Description>依照屏幕管理器中的顺序进入屏幕列表中的上一个屏幕。</Description>
      <ReturnValueType/>
      <Arguments/>
   </Action>
   <Action>
      <Name>Screen.SetFocus</Name>
      <Description>给控件设置焦点。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>CtrlID</Name>
            <Description>要取得焦点的控件 ID。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default/>
               <DataType>AllCtrls</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Screen.SetLocalizedString</Name>
      <Description>设置当前语言中字符串 ID 的文本。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>StringID</Name>
            <Description>要设置文本的字符串 ID。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"My_String_ID"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Text</Name>
            <Description>要给字符串 ID 显示的文本。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"修改的文本"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Screen.StartTimer</Name>
      <Description>启动计时器。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Interval</Name>
            <Description>计时器的时间间隔 (毫秒)。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>1000</Default>
               <DataType>number</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Screen.StopTimer</Name>
      <Description>停止计时器。</Description>
      <ReturnValueType/>
      <Arguments/>
   </Action>
</ActionTemplates>
