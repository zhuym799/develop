<ActionTemplates>
   <Action>
      <Name>DlgScrollingText.AppendLine</Name>
      <Description>追加新行到滚动文本控件中的当前文本。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>ControlID</Name>
            <Description>滚动文本控件的数字 ID。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default/>
               <DataType>ScrollingText</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Line</Name>
            <Description>要添加的文本行。</Description>
            <Type>string</Type>
            <Default>""</Default>
            <Required>1</Required>
            <EasyMode>
               <Default>""</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>AddNewLine</Name>
            <Description>是否在滚动文本窗口中的新行上添加文本。</Description>
            <Type>boolean</Type>
            <Default>true</Default>
            <Required>1</Required>
            <EasyMode>
               <Default>true</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>ScrollToEnd</Name>
            <Description>是否在文本添加之后滚动到文本窗口末尾。</Description>
            <Type>boolean</Type>
            <Default>true</Default>
            <Required>1</Required>
            <EasyMode>
               <Default>true</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>DlgScrollingText.GetProperties</Name>
      <Description>获取当前屏幕上滚动文本控件的属性。</Description>
      <ReturnValueType>table</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>ControlID</Name>
            <Description>滚动文本控件的数字 ID。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default/>
               <DataType>ScrollingText</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
      <Action>
      <Name>DlgScrollingText.SetProperties</Name>
      <Description>设置当前屏幕上滚动文本控件的属性。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>ControlID</Name>
            <Description>滚动文本控件的数字 ID。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default/>
               <DataType>ScrollingText</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Properties</Name>
            <Description>包含滚动文本控件属性的表格，由 "Enabled", "Mode", "Text" 和 "Visible" 索引。</Description>
            <Type>table</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>my_table</Default>
               <DataType>table</DataType>
               <Constraints>*.*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
</ActionTemplates>
