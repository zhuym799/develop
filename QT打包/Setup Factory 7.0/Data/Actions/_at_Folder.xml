<ActionTemplates>
   <Action>
      <Name>Folder.Create</Name>
      <Description>创建新文件夹。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Folder</Name>
            <Description>文件夹的路径。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"C:\\My Folder"</Default>
               <DataType>proj_folder</DataType>
               <Constraints/>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Folder.Delete</Name>
      <Description>删除文件夹。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Folder</Name>
            <Description>文件夹的路径。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"C:\\My Folder"</Default>
               <DataType>proj_folder</DataType>
               <Constraints/>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Folder.DeleteTree</Name>
      <Description>删除指定的文件夹及其子文件夹中的所有文件。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>FolderName</Name>
            <Description>将要删除的文件夹。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"C:\\MyDir\\"</Default>
               <DataType>string</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>CallbackFunction</Name>
            <Description>将在删除过程中调用的函数名称。</Description>
            <Type>function</Type>
            <Default>nil</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>nil</Default>
               <DataType>function</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Folder.DoesExist</Name>
      <Description>如果指定文件夹存在就返回 true，否则返回 false。</Description>
      <ReturnValueType>boolean</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>Folder</Name>
            <Description>文件夹的路径。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"C:\\My Folder"</Default>
               <DataType>proj_folder</DataType>
               <Constraints/>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Folder.Find</Name>
      <Description>搜索文件夹。</Description>
      <ReturnValueType>table</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>StartFolder</Name>
            <Description>文件夹的路径。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"C:\\MyDir\\"</Default>
               <DataType>proj_folder</DataType>
               <Constraints/>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Folder</Name>
            <Description>要搜索的文件夹名称。你可以使用 * 和 ? 通配符来搜索匹配指定目标的文件夹。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"Setup Factory*"</Default>
               <DataType>string</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Recurse</Name>
            <Description>是否递归子文件夹。</Description>
            <Type>boolean</Type>
            <Default>false</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>false</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>CallbackFunction</Name>
            <Description>将在搜索过程中调用的函数名称。</Description>
            <Type>function</Type>
            <Default>nil</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>nil</Default>
               <DataType>function</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Folder.GetCurrent</Name>
      <Description>返回“当前文件夹”(工作目录)。</Description>
      <ReturnValueType>string</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>Folder.Rename</Name>
      <Description>重命名文件夹。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>OldName</Name>
            <Description>文件夹的路径。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"C:\\My Folder"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>NewName</Name>
            <Description>文件夹的新路径。必须包括完整的路径和文件夹名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"C:\\My New Folder"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>Folder.SetCurrent</Name>
      <Description>设置应用程序的“当前文件夹”(工作目录)。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Folder</Name>
            <Description>文件夹的路径。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"C:\\My Folder"</Default>
               <DataType>proj_folder</DataType>
               <Constraints/>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
</ActionTemplates>
