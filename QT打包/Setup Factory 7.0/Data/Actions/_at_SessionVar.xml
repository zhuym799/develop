<ActionTemplates>
   <Action>
      <Name>SessionVar.Expand</Name>
      <Description>返回包含给定的会话变量的内容的字符串。</Description>
      <ReturnValueType>string</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>Text</Name>
            <Description>要展开的会话变量字符串。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"%AppFolder%"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>SessionVar.Get</Name>
      <Description>返回未展开的会话变量的内容。</Description>
      <ReturnValueType>string</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>VariableName</Name>
            <Description>要获取内容的会话变量的名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"%MySessionVar%"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>SessionVar.Remove</Name>
      <Description>在运行时从会话变量管理器中移除给定的会话变量。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>VariableName</Name>
            <Description>要移除的会话变量的名称 (未定义)。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"%MySessionVar%"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>SessionVar.Set</Name>
      <Description>将给定的会话变量设置为指定的值。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>VariableName</Name>
            <Description>要设置值的会话变量的名称。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"%MySessionVar%"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Value</Name>
            <Description>要设置的值。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"我的值"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
</ActionTemplates>
