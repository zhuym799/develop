<ActionTemplates>
   <Action>
      <Name>StatusDlg.GetMeterPos</Name>
      <Description>返回状态对话框的当前状态表位置。</Description>
      <ReturnValueType>number</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>StatusDlg.Hide</Name>
      <Description>隐藏内建的状态对话框。</Description>
      <ReturnValueType/>
      <Arguments/>
   </Action>
   <Action>
      <Name>StatusDlg.IsCancelled</Name>
      <Description>如果点击了内建状态对话框上的取消按钮就返回 true，否则返回 false。</Description>
      <ReturnValueType>boolean</ReturnValueType>
      <Arguments/>
   </Action>
   <Action>
      <Name>StatusDlg.SetMessage</Name>
      <Description>设置内建状态对话框上的主要描述信息。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Text</Name>
            <Description>要显示的文本。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"工作中..."</Default>
               <DataType>string</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>StatusDlg.SetMeterPos</Name>
      <Description>设置内建状态对话框上的状态表位置。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Position</Name>
            <Description>要设置的状态表位置。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>0</Default>
               <DataType>number</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>StatusDlg.SetMeterRange</Name>
      <Description>设置内建状态对话框的状态表的范围。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Begin</Name>
            <Description>范围起始。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>0</Default>
               <DataType>number</DataType>
               <Constraints>0,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>End</Name>
            <Description>范围终止。</Description>
            <Type>number</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>100</Default>
               <DataType>number</DataType>
               <Constraints>0,*</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>StatusDlg.SetStatusText</Name>
      <Description>设置内建状态对话框上的状态文本。这是显示在状态表上的文本。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Text</Name>
            <Description>要显示的状态文本。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"当前状态"</Default>
               <DataType>string</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>StatusDlg.SetTitle</Name>
      <Description>设置内建状态对话框上的标题栏。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Text</Name>
            <Description>要显示的标题栏。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"状态"</Default>
               <DataType>string</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>StatusDlg.SetCancelled</Name>
      <Description>设置内建状态对话框上取消按钮的已点击/未点击状态。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Cancelled</Name>
            <Description>是否已点击取消按钮。</Description>
            <Type>boolean</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>false</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>StatusDlg.Show</Name>
      <Description>显示内建状态对话框。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Icon</Name>
            <Description>要使用的图标。</Description>
            <Type>number</Type>
            <Default>0</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>MB_ICONNONE</Default>
               <DataType>combo</DataType>
               <Constraints>MB_ICONNONE,MB_ICONSTOP,MB_ICONQUESTION,MB_ICONEXCLAMATION,MB_ICONINFORMATION</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Cancelled</Name>
            <Description>是否按下了取消按钮。</Description>
            <Type>boolean</Type>
            <Default>false</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>false</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>StatusDlg.ShowCancelButton</Name>
      <Description>显示或隐藏内建状态对话框上的取消按钮。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>ShowCancel</Name>
            <Description>是否显示取消按钮。</Description>
            <Type>boolean</Type>
            <Default>true</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>true</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>ButtonText</Name>
            <Description>要在取消按钮上显示的文本。</Description>
            <Type>string</Type>
            <Default>"Cancel"</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>"取消"</Default>
               <DataType>string</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
   <Action>
      <Name>StatusDlg.ShowProgressMeter</Name>
      <Description>显示或隐藏内建状态对话框上的进度表。</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>Show</Name>
            <Description>是否显示内建状态对话框上的进度表。</Description>
            <Type>boolean</Type>
            <Default>true</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>true</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
</ActionTemplates>
