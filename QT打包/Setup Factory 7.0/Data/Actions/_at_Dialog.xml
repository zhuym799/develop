<ActionTemplates>
   <Action>
      <Name>Dialog.FileBrowse</Name>
      <Description>显示一个文件浏览对话框，以便用户选择一个或多个文件的路径。</Description>
      <ReturnValueType>table</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>FileOpen</Name>
            <Description>是否显示“文件打开”对话框。</Description>
            <Type>boolean</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>true</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Title</Name>
            <Description>显示在对话框标题栏上的文本。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"定位文件"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>DefaultFolder</Name>
            <Description>要浏览的默认文件夹。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>_DesktopFolder</Default>
               <DataType>proj_folder</DataType>
               <Constraints/>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>FileFilters</Name>
            <Description>将用在浏览器中的文件类型过滤器。默认为“所有文件 (*.*)|*.*|”。</Description>
            <Type>string</Type>
            <Default>"所有文件 (*.*)|*.*|"</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>"所有文件 (*.*)|*.*|"</Default>
               <DataType>string</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Filename</Name>
            <Description>最初显示在文件名编辑框中的文件名。</Description>
            <Type>string</Type>
            <Default>""</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>""</Default>
               <DataType>string</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>FileExtension</Name>
            <Description>默认的文件扩展名。如果用户没有提供扩展名，将追加到文件名编辑框中的文件名后面。</Description>
            <Type>string</Type>
            <Default>""</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>"dat"</Default>
               <DataType>string</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>MultipleSelect</Name>
            <Description>是否允许多选文件。</Description>
            <Type>boolean</Type>
            <Default>false</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>false</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>FileMustExist</Name>
            <Description>当用户点击“打开”或“保存”时，是否确定对话框编辑栏中的文件名存在。</Description>
            <Type>boolean</Type>
            <Default>false</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>false</Default>
               <DataType>boolean</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
