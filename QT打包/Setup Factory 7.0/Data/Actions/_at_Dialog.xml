   <Action>
      <Name>Dialog.Message</Name>
      <Description>显示带有消息信息的对话框。</Description>
      <ReturnValueType>number</ReturnValueType>
      <Arguments>
         <Arg>
            <Name>Title</Name>
            <Description>将显示在对话框标题栏中的文本。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"注意"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Text</Name>
            <Description>将显示在对话框上的文本。</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"在这里输入信息。"</Default>
               <DataType>multiline</DataType>
